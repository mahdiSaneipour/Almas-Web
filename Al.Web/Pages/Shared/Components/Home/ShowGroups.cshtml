                @if (Model.Any(g => g.ParentId == menu.GroupId))
                {
                    <ul>
                        @foreach (var subMenu in Model.Where(sg => sg.ParentId == menu.GroupId))
                        {
                            <li><a href="~/Product/Search?groups=@subMenu.GroupId">@subMenu.GroupName</a></li>
                        }
                    </ul>
                }
            </li>
        }

    </ul>
</div>