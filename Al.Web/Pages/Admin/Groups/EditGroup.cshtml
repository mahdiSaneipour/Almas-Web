@page "{groupId}"
@model Al.Web.Pages.Admin.Groups.EditGroupModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ویرایش گروه";
}

<link rel="stylesheet" href="~/css/admin/admin-groups.css" />

<form method="post">
    <input asp-for="Group.GroupId" hidden/>
    <input asp-for="Group.ParentId" hidden/>

    <div class="name-box">
        <input type="text" asp-for="Group.GroupName" placeholder="نام گروه را وارد کنید">
    </div>
    <div class="button-box">
        <button>ثبت</button>
    </div>
</form>